<Window x:Class="robot.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:robot"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    
    <Grid>

        <Frame Name="frame"/>
        <Button Content="Player mode" HorizontalAlignment="Center" Height="26" Margin="0,50,0,0" VerticalAlignment="Top" Width="188" Click="PlayerMode_Click"/>
        <Button Content="Viewer mode" HorizontalAlignment="Center" Height="26" Margin="0,125,0,0" VerticalAlignment="Top" Width="188" Click="ViewerMode_Click"/>
        <Button Content="Administrator mode" HorizontalAlignment="Center" Height="26" Margin="0,200,0,0" VerticalAlignment="Top" Width="188" Click="AdmMode_Click"/>
        <Button Content="Diary" HorizontalAlignment="Center" Height="26" Margin="0,275,0,0" VerticalAlignment="Top" Width="188" Click="Diary_Click"/>
        <Button Content="Exit" HorizontalAlignment="Center" Height="26" Margin="0,350,0,0" VerticalAlignment="Top" Width="188"  Command="{Binding SaveGameCommand}"/>
        

    </Grid>
</Window>
